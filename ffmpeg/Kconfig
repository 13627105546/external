comment "FFmpeg"

config LIB_FFMPEG
	tristate "Enable FFmpeg"
	default n

if LIB_FFMPEG

config LIB_FFMPEG_CONFIGURATION
	string "ffmpeg configuration"
	default ""
	---help---
		FFmpeg configuration which pass to configure

config LIB_FFMPEG_TOOLS_PRIORITY
	int "task priority"
	default 100

config LIB_FFMPEG_TOOLS_STACKSIZE
	int "stack size"
	default 51200

menu "FFmpeg tools"
config FFMPEG_TOOLS_GRAPH2DOT
	bool "graph2dot"
	default n
endmenu

endif # LIB_FFMPEG
