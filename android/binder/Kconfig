config ANDROID_BINDER
	bool "Enable Android Binder"
	depends on ANDROID && TIMER_FD && TLS_TASK_NELEM > 0
	default n
	---help---
		Android binder, the codebase come from AOSP

config ANDROID_BINDER_IPC_32BIT
	bool "32-bit binder IPC"
	depends on ANDROID_BINDER
	default n
	---help---
		Android 32-bit binder

source "$APPSDIR/external/android/binder/cmds/Kconfig"

