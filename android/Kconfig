config ANDROID
	bool "Enable Android compatible layer"
	depends on LIBCXX && KVDB
	select FS_LARGEFILE
	default n
	---help---
		Android compatible layer, including:
		libbase, libcutils and libutils

config ANDROID_BINDER
	tristate "Enable Android Binder"
	depends on ANDROID && TLS_TASK_NELEM > 0
	default n
	---help---
		Android binder, the codebase come from AOSP

config ANDROID_BINDER_STACKSIZE
	int "Binder service stack size"
	depends on ANDROID_BINDER
	default DEFAULT_TASK_STACKSIZE
